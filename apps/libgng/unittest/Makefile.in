
CC=g++

CXXFLAGS=-g -I../../CppUnitLite2/src  -I../hpp -L../cpp -Wall -Wnon-virtual-dtor # -Weffc++

CFLAGS=-Wmissing-prototypes 

OBJS=testlibgng.o saxtest.o

all: testlibgng

check: testlibgng
	./testlibgng

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testlibgng: $(OBJS)
	g++ $(CXXFLAGS) -L../cpp -o $@ $^ -lcppunit -lgng

maintest: maintest.o transdoubletest.o saxtestlite.o
	g++ $(CXXFLAGS) -o $@ $^ ../../CppUnitLite2/cppunitlite.a -lgng
	
clean:
	rm -f *.o
	rm -f testlibgng
