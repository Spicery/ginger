
CC=g++

CXXFLAGS=-g -I../../CppUnitLite2/src -I../hpp -L../cpp -Wall -Wnon-virtual-dtor # -Weffc++

CFLAGS=-Wmissing-prototypes 

OBJS=testfetchgnx.o

all: testfetchgnx

check: testfetchgnx
	./testfetchgnx

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testfetchgnx: $(OBJS)
	g++ $(CXXFLAGS) $(BOOST_CPPFLAGS) -o $@ $^ ../../CppUnitLite2/cppunitlite.a
	
clean:
	rm -f *.o
	rm -f testfetchgnx
