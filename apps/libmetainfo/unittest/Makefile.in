
CC=g++

CXXFLAGS=-g -I../../CppUnitLite2/src -I../hpp -L../cpp -Wall -Wnon-virtual-dtor # -Weffc++

CFLAGS=-Wmissing-prototypes 

OBJS=testlibmetainfo.o

all: testlibmetainfo

check: testlibmetainfo
	./testlibmetainfo

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testlibmetainfo: $(OBJS)
	g++ $(CXXFLAGS) -o $@ $^ ../../CppUnitLite2/cppunitlite.a
	
clean:
	rm -f *.o
	rm -f testlibmetainfo
