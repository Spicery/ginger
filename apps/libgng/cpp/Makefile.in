# EPREFIX should be bound to PREFIX by default. This appears to be a lie.
# As a consequence we override EPREFIX entirely. Probably incorrect but not
# that interesting.
prefix=/usr/local
exec_prefix=/usr/local
datarootdir=${prefix}/share
PACKAGE_TARNAME=appginger
INSTALL_BIN=${exec_prefix}/bin
INSTALL_LIB=${prefix}/share/appginger
INSTALL_DOC=${datarootdir}/doc/${PACKAGE_TARNAME}

EXEC_DIR="$(INSTALL_BIN)"

CC=@CXX@

CXXFLAGS=-DINSTALL_BIN='"$(INSTALL_BIN)"' -DINSTALL_LIB='"$(INSTALL_LIB)"' -DEXEC_DIR='$(EXEC_DIR)' -g -I../hpp -I/opt/local/include -Wall -Wnon-virtual-dtor # -Weffc++
CFLAGS=-Wmissing-prototypes 

OBJS=sax.o mishap.o facet.o fileutils.o command.o arity.o metainfo.o printgpl.o mnx.o mnxsax.o lnxitem.o lnxreader.o

all: libgng.a

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
libgng.a: $(OBJS)
	ar -rcs $@ $+
	
clean:
	rm -f *.o
	rm -f *.a

#	Nothing needs doing.
check:
