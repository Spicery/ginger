# EPREFIX should be bound to PREFIX by default. This appears to be a lie.
# As a consequence we override EPREFIX entirely. Probably incorrect but not
# that interesting.
prefix=@prefix@
exec_prefix=@prefix@
datarootdir=@datarootdir@
PACKAGE_TARNAME=@PACKAGE_TARNAME@
INSTALL_BIN=@bindir@
INSTALL_LIB=@datarootdir@/@PACKAGE_TARNAME@
INSTALL_DOC=@docdir@

#LICENSE_FILE="$(INSTALL_LIB)/LICENSE.txt"
#LICENSE_FILE="$(INSTALL_LIB)/LICENSE.txt"


CC=@CXX@

CXXFLAGS=-DINSTALL_BIN='"$(INSTALL_BIN)"' -DINSTALL_LIB='"$(INSTALL_LIB)"' -g -I../hpp -I../../libgng/hpp -I../../automatic/machine -I../../automatic/sys -I../../automatic/simple -I/opt/local/include -Wall -Wnon-virtual-dtor -L/opt/local/lib
CFLAGS=-Wmissing-prototypes 

OBJS= package_autoload.o command.o mishap.o term.o read_xml.o \
	functor.o plant.o cage.o vmi.o registers.o roots.o \
	rcep.o arity.o resolve.o lift.o ident.o \
	dict.o package.o \
	sys.o syskey.o sysclass.o sysequals.o sysprint.o syslist.o sysvector.o \
	sysstring.o syssymbol.o sysmap.o sysindirection.o sysinstance.o \
	sysfunction.o sysmethod.o \
	destination.o heap.o \
	key.o \
	misclayout.o listlayout.o stringlayout.o \
	maplayout.o vectorlayout.o functionlayout.o \
	heapcrawl.o cagecrawl.o callstackcrawl.o fnobjcrawl.o \
	garbagecollect.o \
	scanfunc.o scandict.o \
	machine.o \
	instruction_set.o \
	machine1.o \
	instruction_set1.o \
	machine2.o \
	instruction_set2.o \
	machine3.o \
	instruction_set3.o \
	appcontext.o \
	makesysfn.o \
	valof.o 

all: appginger

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
appginger: libappginger.a main.o
	@CXX@ $(CXXFLAGS) $(BOOST_CPPFLAGS) -o $@ main.o libappginger.a -l boost_iostreams ../../libgng/cpp/libgng.a
	
clean:
	rm -f *.o
	rm -f appginger
	rm -f *.a

#	Nothing needs doing.
check:
	
libappginger.a: $(OBJS)
	ar -rcs $@ $+
