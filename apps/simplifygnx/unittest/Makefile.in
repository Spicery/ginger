
CC=@CXX@
CXX=@CXX@


CXXFLAGS=-g -std=c++0x -I../../CppUnitLite2/src -I../hpp -I../../libgng/hpp -Wall -Wnon-virtual-dtor
CFLAGS=-Wmissing-prototypes 
LDFLAGS=-ldl
OBJS=testsimplifygnx.o

all: testsimplifygnx

check: testsimplifygnx
	./testsimplifygnx

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testsimplifygnx: $(OBJS)
	$(CC) $(CXXFLAGS) -o $@ $^ ../../libgng/cpp/libgng.a  ../../CppUnitLite2/cppunitlite.a $(LDFLAGS)
	
clean:
	rm -f *.o
	rm -f testsimplifygnx
	rm -f *.a
