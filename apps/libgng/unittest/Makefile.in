
CC=g++

CXXFLAGS=-g -I../hpp -L../cpp -Wall -Wnon-virtual-dtor -std=c++11 # -Weffc++

CFLAGS=-Wmissing-prototypes 

OBJS=testlibgng.o saxtest.o

all: testlibgng

check: testlibgng
	./testlibgng

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testlibgng: $(OBJS)
	g++ $(CXXFLAGS) $(BOOST_CPPFLAGS) -L../cpp -o $@ $^ -lcppunit -lgng
	
clean:
	rm -f *.o
	rm -f testlibgng
