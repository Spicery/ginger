    Ref rx = *( VMVP );
    if ( IsSmall( rx ) && IsSmall( ry ) ) {
    	long y = (long)ry;
    	long x = (long)rx;
    	long sum = x + y;
    	if ( x < 0 ? sum <= y : sum >= y ) {
