
CC=@CXX@

CXXFLAGS=-g -std=c++11 -I../hpp -L../cpp -Wall -Wnon-virtual-dtor # -Weffc++

CFLAGS=-Wmissing-prototypes 

OBJS=testfetchgnx.o

all: testfetchgnx

check: testfetchgnx
	./testfetchgnx

# $@ is make shorthand for the target.
# $@ is make shorthand for the dependencies
testfetchgnx: $(OBJS)
	$(CC) $(CXXFLAGS) $(BOOST_CPPFLAGS) -o $@ $^ -lcppunit
	
clean:
	rm -f *.o
	rm -f testfetchgnx
